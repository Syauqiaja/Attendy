    <style name="AppTheme.TextAppearance.Body.XS.Bold" parent="AppTheme.TextAppearance.Body.XS">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    <!--  ======================================================== -->
    <!--  ============ END OF TEXT APPEARANCE STYLING ============ -->
    <!--  ======================================================== -->
</resources>