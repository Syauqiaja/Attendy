    <style name="AppTheme.TextAppearance.Body.S" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>
    <style name="AppTheme.TextAppearance.Body.S.Medium" parent="AppTheme.TextAppearance.Body.S">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    <style name="AppTheme.TextAppearance.Body.S.Semibold" parent="AppTheme.TextAppearance.Body.S">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <!--  Body XS  -->
    <style name="AppTheme.TextAppearance.Body.XS" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>
    <style name="AppTheme.TextAppearance.Body.XS.SemiBold" parent="AppTheme.TextAppearance.Body.XS">
