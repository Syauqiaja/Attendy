<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.main.location.create.CreateLocationFragment"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="@string/create_location"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/AppTheme.TextAppearance.Body.XL"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:paddingBottom="@dimen/_12cdp">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/maps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:background="@color/white_2"
            android:tag="mapFragment"
            map:cameraBearing="112.5"
            map:cameraTargetLat="-33.796923"
            map:cameraTargetLng="150.922433"
            map:cameraZoom="13"
            map:mapType="normal"
            map:uiCompass="false"
            map:uiRotateGestures="false"
            map:uiScrollGestures="true"
            map:uiTiltGestures="false"
            map:uiZoomControls="false"
            map:uiZoomGestures="true"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/primary"
            android:layout_gravity="center"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_lock"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            map:cornerRadius="8dp"
            map:icon="@drawable/selector_lock_checkable"
            map:iconSize="@dimen/_40cdp"
            map:rippleColor="@color/transparent"
            android:checkable="true"
            map:toggleCheckedStateOnClick="true"
            android:padding="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            map:iconGravity="textStart"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/_24cdp"
            android:layout_marginEnd="@dimen/_24cdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_24cdp"
            android:layout_marginTop="@dimen/_12cdp"
            android:paddingHorizontal="@dimen/_12cdp"
            android:paddingVertical="@dimen/_4sdp"
            android:layout_gravity="top"
            android:background="@drawable/bg_rounded_24">
            <TextView
                android:id="@+id/tv_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude: "/>

            <TextView
                android:id="@+id/tv_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16cdp"
                android:text="Longitude: "/>
        </LinearLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_location_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location_name"
                android:layout_marginHorizontal="@dimen/_24cdp"
                android:textAppearance="@style/AppTheme.TextAppearance.Body.M.Medium"
                android:layout_marginTop="@dimen/_24cdp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_location_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.TextInputLayout.Default"
                android:layout_marginHorizontal="@dimen/_24cdp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_location_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textShortMessage"
                    android:lines="1"
                    android:hint="@string/enter_the_location_name"
                    style="@style/AppTheme.TextInputEditText.Default"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_location_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:layout_marginHorizontal="@dimen/_24cdp"
                android:textAppearance="@style/AppTheme.TextAppearance.Body.M.Medium"
                android:layout_marginTop="@dimen/_24cdp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_location_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.TextInputLayout.Default"
                android:layout_marginHorizontal="@dimen/_24cdp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_location_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_the_location_address"
                    style="@style/AppTheme.TextInputEditText.Default"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_location_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:layout_marginHorizontal="@dimen/_24cdp"
                android:textAppearance="@style/AppTheme.TextAppearance.Body.M.Medium"
                android:layout_marginTop="@dimen/_24cdp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_location_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.TextInputLayout.Default"
                android:layout_marginHorizontal="@dimen/_24cdp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_location_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/describe_this_location_in_short"
                    android:lines="3"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    style="@style/AppTheme.TextInputEditText.Default"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_24cdp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time Open"
                        android:textAppearance="@style/AppTheme.TextAppearance.Body.M.Medium"
                        android:layout_marginTop="@dimen/_24cdp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/AppTheme.TextInputLayout.Default">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_checkin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:hint="--:-- AM"
                            android:clickable="true"
                            android:focusable="false"
                            style="@style/AppTheme.TextInputEditText.Default"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/_24cdp"
                    android:layout_height="0dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time Closed"
                        android:textAppearance="@style/AppTheme.TextAppearance.Body.M.Medium"
                        android:layout_marginTop="@dimen/_24cdp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/AppTheme.TextInputLayout.Default">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_checkout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:hint="--:-- AM"
                            android:clickable="true"
                            android:focusable="false"
                            style="@style/AppTheme.TextInputEditText.Default"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_location"
                android:layout_marginHorizontal="@dimen/_24cdp"
                android:layout_marginTop="@dimen/_40cdp"
                android:layout_marginBottom="@dimen/_40cdp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>