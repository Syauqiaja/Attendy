        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lapangan Sasana Krida"
            android:textAppearance="@style/AppTheme.TextAppearance.Body.L"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="@dimen/_24cdp"
            app:drawableStartCompat="@drawable/ic_office"
            android:drawablePadding="@dimen/_4sdp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8cdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check in due:"
                    android:textAppearance="@style/AppTheme.TextAppearance.Body.S"
                    android:textColor="?attr/colorOnPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00 AM"
                    android:textAppearance="@style/AppTheme.TextAppearance.Body.L.SemiBold"
                    android:textColor="?attr/colorOnPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_20cdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check out starts:"
                    android:textAppearance="@style/AppTheme.TextAppearance.Body.S"
                    android:textColor="?attr/colorOnPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04:00 PM"
                    android:textAppearance="@style/AppTheme.TextAppearance.Body.L.SemiBold"
                    android:textColor="?attr/colorOnPrimary"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_change_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:text="@string/change_location"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_gravity="bottom"
                android:paddingHorizontal="12dp"
                android:textColor="@color/white"
                app:cornerRadius="0dp"
                app:strokeColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_head"
        android:layout_marginTop="-24dp"
        android:paddingTop="@dimen/_24cdp"
        android:paddingHorizontal="@dimen/_24cdp"
        android:background="@drawable/bg_rounded_24_top"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attendance_history"
                android:textAppearance="@style/AppTheme.TextAppearance.Heading5.SemiBold"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                android:minHeight="0dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16cdp"
            tools:listitem="@layout/item_attendance_history"
            android:paddingTop="@dimen/_16cdp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="7"/>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fab_do_attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_24cdp"
        android:layout_marginBottom="@dimen/_40cdp"
        android:background="@drawable/bg_gradient_card"
        app:cardElevation="@dimen/_3sdp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="0dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_gradient_card"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_12sdp">
            <ImageView
                android:layout_width="@dimen/_24cdp"
                android:layout_height="@dimen/_24cdp"
                android:src="@drawable/ic_check"
                app:tint="@color/white"
                android:layout_marginEnd="@dimen/_4sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/do_attendance"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textAppearance="@style/AppTheme.TextAppearance.Body.L"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>